<%= form_for @item, :html => { :class => 'text-center' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :priority, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :priority, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stocked, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :stocked, :class => 'check_box' %>
    </div>
  </div>


  <%= f.hidden_field :group_id, :value => @item.group.id %>

  <div class="form-actions" style="background-color: transparent;">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                group_path(@item.group), :class => 'btn' %>
  </div>
<% end %>
