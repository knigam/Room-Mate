<%- model_class = Group -%>
<div class="page-header">
  <h1><%=t '.title', :default => @group.name.titleize %></h1>
</div>

<div class="row">
  <div class="span12">
    <dl class="dl-horizontal">
      <dd><%= @group.description %></dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="span5">
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:name) %></th>
	      <th><%= model_class.human_attribute_name(:number) %></th>
	      <th><%= model_class.human_attribute_name(:priority) %></th>
	      <th><%=t '.actions', :default => t("helpers.actions") %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @group.items.each do |item| %>
	      <tr>
		<td><%= link_to item.name, item_path(item) %></td>
		<td><%= item.number %></td>
		<td><%= item.priority %></td>
		<td>
		  <%= link_to t('.edit', :default => t("helpers.links.edit")),
			      edit_item_path(item), :class => 'btn btn-mini' %>
		  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			      item_path(item),
			      :method => :delete,
			      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			      :class => 'btn btn-mini btn-danger' %>
		</td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<%= link_to t('.new', :default => t("helpers.links.new")),
		    new_item_path(:group => @group),
		    :class => 'btn btn-primary' %>
  </div>
  <div class="span5">
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:name) %></th>
	      <th><%= model_class.human_attribute_name(:due) %></th>
	      <th><%= model_class.human_attribute_name(:priority) %></th>
	      <th><%=t '.actions', :default => t("helpers.actions") %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @group.tasks.each do |task| %>
	      <tr>
		<td><%= link_to task.name, task_path(task)%></td>
		<td><%= task.due %></td>
		<td><%= task.priority %></td>
		<td>
		  <%= link_to t('.edit', :default => t("helpers.links.edit")),
			      edit_task_path(task), :class => 'btn btn-mini' %>
		  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			      task_path(task),
			      :method => :delete,
			      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			      :class => 'btn btn-mini btn-danger' %>
		</td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<%= link_to t('.new', :default => t("helpers.links.new")),
		    new_task_path(:group => @group),
		    :class => 'btn btn-primary' %>
  </div>
  <div class="span2">
    <p>Users</p>
    <% @group.users.each do |u| %>
      <p><%= u.first_name %></p>
    <% end %>
  </div>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              groups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_path(@group), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_path(@group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= link_to t('.new_user', :default => t("helpers.links.new_user")),
	      group_new_user_url,
	      :class => 'btn btn-primary' %>
</div>
